{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build debian package",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/buildPackage.sh",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build chroot for debian package build",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/createChroot.sh",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "start EXA_HostName_g",
            "type": "shell",
            "command": "${workspaceFolder}/build/GCC for x86_64-linux-gnu 7.4.0_Debug/examples/EXA_HostName/EXA_HostName_g",
            "args": [
                "--host", "localhost"
            ]
        }
    ]
}