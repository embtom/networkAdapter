{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "create build container with reprepo",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/010_docker_create.sh",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "setup reprepo build dependencies",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/020_docker_build_depend.sh",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "setup reprepo import dependencies",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/021_docker_import_depend.sh",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build basetgz localhost mirror",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/200_basetgz_create_localhost.sh",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build basetgz tomhp mirror",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/200_basetgz_create_tomhp.sh",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build deb package",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/300_build_package.sh",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "start EXA_HostName_g",
            "type": "shell",
            "command": "${workspaceFolder}/build/GCC for x86_64-linux-gnu 7.5.0_Debug/examples/EXA_HostName/EXA_HostName_g",
            "args": [
                "--host", "localhost"
            ]
        }
    ]
}